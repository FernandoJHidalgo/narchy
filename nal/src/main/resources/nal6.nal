    ((&&,M,A..+) ==> X), ((&&,A..+) ==> Y), task(".") |- subIfUnifiesAny(M,X,Y,"$"), (Belief:Abduction)
    //(M ==> C), C, task(".") |- M, (Belief:Abduction)
